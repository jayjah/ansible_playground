  #    - targets: [ 'cadvisor:8080' ]

  {% for item in groups['servers'] if hostvars[item]['name'] != 'metricsandbackups' -%}
  - job_name: '{{ hostvars[item]['name'] }}-node-exporter'
    static_configs:
      - targets: [ '{{ hostvars[item]['ansible_host'] }}:{{ node_metrics_port }}' ]
  {% endfor %}
