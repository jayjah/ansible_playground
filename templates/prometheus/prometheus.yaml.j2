  {% for item in groups['servers'] if hostvars[item]['name'] != 'metricsandbackups' -%}
  - job_name: '{{ hostvars[item]['name'] }}-docker'
    static_configs:
      - targets: [ '{{ hostvars[item]['ansible_host'] }}:9323' ]
  {% endfor %}
