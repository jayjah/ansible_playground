version: '3.2'

services:
  prometheus:
    image: prom/prometheus-linux-amd64:latest
    expose:
      - 9090
    network_mode: host
    command:
      - --config.file=/etc/prometheus/prometheus.yml
    volumes:
      - prometheusdata:/prometheus
      - ./prometheus.yaml:/etc/prometheus/prometheus.yml:ro
      - ./alert.rules:/etc/prometheus/alert.rules
    restart: unless-stopped

  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    volumes:
      - grafanadata:/var/lib/grafana
      - ./dashboards:/dashboards
      - ./grafana.ini:/etc/grafana/grafana.ini
    expose:
      - 3000
    network_mode: host
    environment:
      GF_USERS_DEFAULT_THEME: dark
      GF_INSTALL_PLUGINS: grafana-clock-panel,grafana-simple-json-datasource
      GF_USERS_ALLOW_SIGN_UP: "false"
      GF_SECURITY_ADMIN_PASSWORD: test
      #GF_SERVER_DOMAIN=myrul.com
      #GF_SMTP_ENABLED=true
      #GF_SMTP_HOST=smtp.gmail.com:587
      #GF_SMTP_USER=myadrress@gmail.com
      #GF_SMTP_PASSWORD=mypassword
      #GF_SMTP_FROM_ADDRESS=myaddress@gmail.com
    depends_on:
      - prometheus
    restart: unless-stopped

  alertmanager:
    image: quay.io/prometheus/alertmanager
    privileged: true
    container_name: alertmanager
    expose:
      - 9093
    network_mode: host
    command:
      - "--cluster.listen-address="
      - "--config.file=/alertmanager.yaml"
    volumes:
      - ./alertmanager.yaml:/alertmanager.yaml
    depends_on:
      - prometheus
    restart: unless-stopped

  sentry-alert:
    image: mikeroll/alertmanager-sentry-gateway:latest
    container_name: sentry-alert
    expose:
      - 9096
    network_mode: host
    command:
      - "--dsn={{ server_sentry_dns }}"
    depends_on:
      - alertmanager
    restart: unless-stopped

volumes:
  prometheusdata:
    driver: local
  grafanadata:
    driver: local